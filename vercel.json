{
  "builds": [
    {
      "src": "epg_server.py",
      "use": "@vercel/python@latest",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"  # 指定Python版本（Vercel推荐）
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "epg_server.py"   # 所有请求转发到Flask服务
    }
  ],
  "env": {
    "PYTHONIOENCODING": "utf-8",  # 强制UTF-8编码，解决中文乱码
    "FLASK_ENV": "production"     # 生产环境模式
  }
}
